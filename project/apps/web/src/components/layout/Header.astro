    <nav class="flex flex-wrap items-center justify-between mx-auto py-4 px-36 text-lg select-none">
        <div class="flex items-center text-lg">
            <div class="logo">
                <Image src={logo} alt="Logo de la unefa" width={60} height={20}></Image>
