---
import Layout from '../layouts/Layout.astro';

const getNotices = async function() {
	return await fetch("http://localhost:3000/api/notices")
	.then(res => res.json())
	.catch(err => console.log(err));
};

const postNotices = await getNotices();
---

<Layout>
	<section class="flex flex-col items-center justify-center gap-4">
			{postNotices.notices.map(({ title, autor, content }: {title: string, autor: string, content: string}) => (
				<article class="w-full flex flex-col gap-12 container border-1 border-second-light-v2 rounded-xl p-12 m-10">
				    <header>
						<h2 class="text-center font-overpass font-bold text-4xl">{title}</h2>
				        <h3 class="text-center font-dm font-medium">{autor} 2020</h3>
					</header>
				    <div class="font-overpass p-12" set:html={content}></div>
				</article>
			))}
	</section>
</Layout>

<style>
	.ql-align-center {
		text-align: center;
		font-size: 12px;
	}
</style> 

